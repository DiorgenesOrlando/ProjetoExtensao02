<title>Cliente | Editar</title>

<div class="container-x1 px-4 h-100">
 <form action="/abastecedor/editarPost" method="POST">
    <input type="hidden" name="id" value={{abastecedor.id}}>

        <div class="col-mb-3">
            <h4>Novo Equipamento</h4>
        </div>

        <hr>

        <div class="form-row row">
            <div class="form-group col mb-3">
                <label for="matricula" class="form-label">Matricula</label>
                <input type="text" maxlength="20" class="form-control" name="matricula"
                    placeholder="Informar a matricula do Abastecedor" value={{abastecedor.matricula}} required>
            </div>

            <div class="form-group col mb-3">
                <label for="nome" claSs="form-label">Nome</label>
                <input type="text" maxlength="30" class="form-control" name="nome"
                    placeholder="Informar o nome do Abastecedor" value="{{abastecedor.nome}}" required>
            </div>
        </div>

        
        <div class="form-row row">

        <center class="mt-3">
        <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill" name="salvar"></i>
